<p id="notice"><%= notice %></p>

<h1>评论列表</h1>

<table>
  <thead>
    <tr>
      <th><%= '用户名'%></th> 
      <th><%= '食品名称'%></th>
      <th><%= '讲课内容'%></th>
      <th><%= '美食口感'%></th>
      <th><%= '服务态度'%></th>
      <th><%= '点评'%></th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @reviews.each do |review| %>
      <tr>
                    <td><%= review.username %></td>
                    <td><%= review.coursename %></td>
                    <td><%= sprintf("%.0f",review.ratingone) %></td>
                    <td><%= sprintf("%.0f",review.ratingtwo) %></td>
                    <td><%= sprintf("%.0f",review.ratingthree) %></td>
                    <td><%= review.description %></td>
        <td><%= link_to '编辑', edit_review_path(review) %></td>
        <td><%= link_to '删除', review, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

<%= link_to '添加评论', new_review_path %>
<%= link_to '返回食品列表', movies_path %>
